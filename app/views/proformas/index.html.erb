<main>

	<h1>Proformas <%= link_to("AÃ±adir proforma", new_proforma_path, :class => 'action new btn btn-outline-success btn-small') %></h1>
	
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th scope="col">#</th>
	      <th scope="col">Cliente</th>
	      <th scope="col">Proveedor</th>
	      <th scope="col">Comuna</th>
	      <th scope="col">Subtotal</th>
	      <th scope="col">Fecha</th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @proformas.each do |proforma| %>
	    <tr>
	      	<th scope="row"><%= proforma.id %></th>
	      	<td><%= proforma.nombre_cliente %></td>
	      	<td><%= proforma.nombre_proveedor %></td>
	      	<td><%= proforma.comuna_proveedor %></td>
	      	<td><%= proforma.subtotal_producto %></td>
	      	<td><%= proforma.created_at %></td>
	      	<td>
	    		<%= link_to("ver / editar", edit_proforma_path(proforma), :class => 'btn btn-outline-primary btn-sm') %>
	    		<%= link_to("eliminar", delete_proforma_path(proforma), :class => 'btn btn-outline-danger btn-sm') %>
	    	</td>
	    </tr>
	    <% end %>
	  </tbody>
	</table>

</main>