<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1>Añadir comuna</h1>
			<%= form_for(@comuna) do |f| %>
			<div class="form-row">
				<div class="form-group col-md-12">
				  <label for="nombre">Comuna</label>
				  <%= f.text_field(:nombre) %>
				</div><!-- /form-group -->
			</div><!-- /form-row -->
			<div class="form-row">
				<div class="form-group col-md-12">
				  <%= f.submit("Añadir") %>
				</div><!-- /form-group -->
			</div><!-- /form-row -->
			<% end %>
		</div><!-- /col-md-12 -->
	</div><!-- /row -->
</div><!-- /container -->
