<main>
	<h1>Articulos <%= link_to("Añadir artículo", new_article_path, :class => 'action new btn btn-outline-success btn-small') %></h1>
	 
	<hr>
	<%= form_tag(articles_path, method: :get) do %>
	  <%= text_field_tag :term,  nil, placeholder: 'Ingresar + o - (ej. +10)' %>
	  <%= submit_tag ("Porcentaje") %>
	<% end %>
	
	<table class="table table-striped" style="margin-top: 10px;">
	  <thead>
	    <tr>
	      <th scope="col">#</th>
	      <th scope="col">Descripción</th>
	      <th scope="col">Precio</th>
	      <th scope="col">Euro</th>
	      <th scope="col">Dólar</th>
	      <th scope="col">Nombre</th>
	      <th scope="col"></th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @articles.each do |article| %>
	    <tr>
	      <th scope="row"><%= article.id %></th>
	       <td><%= article.descripcion %><br>
	       	<%= link_to("editar", edit_article_path(article), :class => 'btn btn-outline-warning btn-sm') %>
	       </td>
	      	<td><%= article.precio %></td>
	      	<td><%= article.euro %></td>
	    	<td><%= article.dolar %></td>
	     	<td><%= article.nombre %></td>
	     	<td>
	    		<%= link_to("ver / editar", edit_article_path(article), :class => 'btn btn-outline-primary btn-sm') %>
	    		<%= link_to("eliminar", delete_article_path(article), :class => 'btn btn-outline-danger btn-sm') %>
	    	</td>
	    </tr>
	    <% end %>
	  </tbody>
	</table>

</main>